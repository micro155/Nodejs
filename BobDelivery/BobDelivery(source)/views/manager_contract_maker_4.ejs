    <script>
        function Apply_student_notice() {
         window.open("../public/manager_notice_student.html","학생 공고 작성","width=1500, height=1500");
        }
        
        function Apply_maker_notice() {
         window.open("../public/manager_notice_maker.html","업체 공고 작성","width=1500, height=1500");
        }
        
        function menu_click(str) {
            if(str == "main") {
                frm.action = "/process/Manager_Main";
            } else if(str == "allocation") {
                frm.action = "/process/Manager_Allocation";
            } else if(str == "certValid") {
                frm.action = "/process/Manager_CertValidFirst";
            } else if(str == "contractMaker") {
                frm.action = "/process/Manager_MakerContract";
            } else if(str == "childManage") {
                frm.action = "/process/Manager_ChildManage";
            } else if(str == "childArrangement") {
                frm.action = "/process/Manager_ChildArrangementFirstPage";
            } else if(str == "makerlist") {
                frm.action = "/process/Manager_MakerList";
            } else if(str == "studentlist") {
                frm.action = "/process/Manager_StudentList";
            } else if(str == "mypage") {
                frm.action = "/process/Manager_mypage";
            } else if(str == "logout") {
                frm.action = "/process/logout";
            }
        }
        
        
        function Complete() {
            alert('계약 상태가 변경되었습니다.');
            var frm2 = document.frm2;
            frm2.action = "/process/ChangeState";
            frm2.submit();
        }
        
    </script>
    
